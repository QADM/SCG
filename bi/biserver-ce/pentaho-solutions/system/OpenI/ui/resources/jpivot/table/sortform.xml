<xform style="manual" bundle="com.tonbeller.jpivot.table.resources">
	<div style="height: 300px">
		<table border="0" cellspacing="5" cellpadding="2" id="sortForm" width="100%">
			<!-- 
				<title value="fmt:sortform.title">
