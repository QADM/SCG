    <AcctgTagUsageType acctgTagUsageTypeId="COMMISSIONS_PAYABLE" description="Commissions Payable posting"/>
    <AcctgTagUsageType acctgTagUsageTypeId="TRANSACTION_ENTRY" description="Transaction entries"/>
    <AcctgTagUsageType acctgTagUsageTypeId="CHECK_RUN" description="Payments to multiple vendors"/>

</entity-engine-xml>
