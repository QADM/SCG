<!-- This is a special component just to hold various translation files.  You can create one yourself
for your language as well and plug it into opentaps -->

<ofbiz-component name="translations"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/ofbiz-component.xsd">
    <resource-loader name="main" type="component"/>

    <classpath type="dir" location="config/Bulgarian"/>
    <classpath type="dir" location="config/Chinese"/>
</ofbiz-component>

