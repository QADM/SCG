<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-application-decorator">
        <section>
            <actions>
                <property-map global="true" resource="controllerinjectex" map-name="configProperties"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="OpentapsUiLabels" map-name="uiLabelMap" global="true"/>
                <set field="opentapsApplicationName" value="controllerinjectex" global="true"/>
                <script location="component://controllerinjectex/webapp/controllerinjectex/WEB-INF/actions/includes/main-decorator.bsh"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="component://opentaps-common/widget/screens/common/CommonScreens.xml">
                    <decorator-section name="application-layout">
                        <decorator-section-include name="section-layout"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

</screens>
