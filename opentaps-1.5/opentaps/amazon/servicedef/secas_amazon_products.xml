<service-eca xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/service-eca.xsd">

    <!-- Create the initial set of Amazon product records when a product is created. These
           AmazonProduct records will likely lack the minimum set of data necessary for
           successful posting to Amazon. -->
    <eca service="createProduct" event="commit" run-on-error="false">
        <action service="opentaps.amazon.createOrUpdateAmazonProduct" mode="sync"/>
    </eca>

</service-eca>
    