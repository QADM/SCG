<ofbiz-containers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/ofbiz-containers.xsd">
    <!-- load the ofbiz component container (always first) -->
    <container name="component-container" class="org.ofbiz.base.container.ComponentContainer"/>

    <!-- load the cached classloader container (always second) -->
    <container name="classloader-container" class="org.ofbiz.base.container.ClassLoaderContainer"/>

    <!-- the constants generator container, auto generate Java constants from some existing values in the DB (eg: some Enumeration, StatusItem ...) as configured in the configProperties file. -->
    <container name="constants-generation-container" class="org.opentaps.domain.container.ConstantsGeneratorContainer">
        <property name="delegator-name" value="default"/>
        <property name="template" value="opentaps/opentaps-common/templates/Constants.ftl"/>
        <property name="outputPath" value="opentaps/opentaps-common/src/constants/org/opentaps/base/constants/"/>
        <!-- no extension needed here, .properties is assumed by the loader -->
        <property name="configProperties" value="constantsGenerationConfig" />
    </container>
</ofbiz-containers>

