<?xml version="1.0" encoding="UTF-8"?>
<datasources>
  <xa-datasource>
  
    <jndi-name>OFBizDS2</jndi-name>

    <xa-datasource-class>com.mysql.jdbc.jdbc2.optional.MysqlXADataSource</xa-datasource-class>
    <xa-datasource-property name="URL">jdbc:mysql://127.0.0.1:3306/opentaps?autoReconnect=true&amp;useOldAliasMetadataBehavior=true</xa-datasource-property>
    <xa-datasource-property name="User">opentaps</xa-datasource-property>
    <xa-datasource-property name="Password">opentaps</xa-datasource-property>
    
    <exception-sorter-class-name>org.jboss.resource.adapter.jdbc.vendor.MySQLExceptionSorter</exception-sorter-class-name>
    
    <!-- should only be used on drivers after 3.22.1 with "ping" support -->
    <valid-connection-checker-class-name>org.jboss.resource.adapter.jdbc.vendor.MySQLValidConnectionChecker</valid-connection-checker-class-name>

  </xa-datasource>
</datasources>

